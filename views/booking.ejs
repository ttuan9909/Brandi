    <div class="appoinment-form appointment-page pq-py-130">
        <div class="container">
           <div class="row align-items-center flex-column-reverse flex-lg-row">
              <div class="col-xl-6 col-lg-6 mt-4 mt-xl-0">
                 <div class="appoinment-box">
                    <form action="/booking/create" method="POST" class="pq-applyform" novalidate>
                        <div class="pq-appointment">
                            <div class="row">
                                <div class="col-lg-12">
                                    <label>
                                        <span class="pq-appointment-title"> Choose Doctor by Name </span>
                                        <span class="form-control-wrap your-country">
                                            <select name="doctorId" class="form-select" required>
                                                <% doctors.forEach(doctor => { %>
                                                    <option value="<%= doctor._id %>"><%= doctor.name %></option>
                                                <% }); %>
                                            </select>
                                        </span>
                                    </label>
                                </div>
                                <div class="col-lg-12">
                                    <input type="text" name="patientName" class="form-control pq-bg-white paitent-name-field" placeholder="Patient Name" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" name="phone" class="form-control pq-bg-white phone-number-field" placeholder="Phone" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="email" name="email" class="form-control pq-bg-white e-mail-field" placeholder="Your Email" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="date" name="appointmentDate" class="form-control pq-bg-white" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" name="time" class="form-control pq-bg-white time-field" placeholder="e.g., 10:30 AM" required>
                                </div>
                                <div class="col-lg-12">
                                    <textarea name="note" class="form-control pq-bg-white" placeholder="Type Appointment Note" rows="3"></textarea>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="pq-button form-btn">
                                        <div class="pq-button-block">
                                            <span class="pq-button-text me-0">Book Appointment</span>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    
                 </div>

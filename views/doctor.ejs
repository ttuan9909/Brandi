<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        .container {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        h2 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }
        .btn-custom {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .table {
            text-align: center;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .table th {
            background-color: #2c7d59;
            color: white;
        }
        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>List of Doctors</h2>

    <!-- Button Create Doctor -->
    <div class="btn-custom">
        <a href="/admin/formdoctor" class="btn btn-success"><i class="fa fa-plus"></i> Add New Doctor</a>
        <a href="/admin" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back to Home</a>
    </div>

    <table class="table table-bordered table-hover mt-4">
        <thead>
            <tr>
                <th>Name</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Address</th>
                <th>Experience</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% doctors.forEach(doctor => { %>
                <tr>
                    <td><%= doctor.name %></td>
                    <td><%= doctor.userId ? doctor.userId.username : 'N/A' %></td>
                    <td><%= doctor.userId ? '••••••••' : 'N/A' %></td>
                    <td><%= doctor.email %></td>
                    <td><%= doctor.address || 'N/A' %></td>
                    <td><%= doctor.experience || 'N/A' %></td>
                    <td><%= doctor.description || 'No description' %></td>
                    <td>$<%= doctor.price %></td>
                    <td>
                        <div class="action-buttons">
                            <a href="/admin/edit-doctor/<%= doctor._id %>" class="btn btn-primary btn-sm">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <form action="/admin/doctors/<%= doctor._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                    <i class="fa fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

</body>
</html>
